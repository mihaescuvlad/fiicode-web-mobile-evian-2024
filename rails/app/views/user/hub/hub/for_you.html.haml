- @posts.each do |post|
  = render "user/hub/posts/post", post: post

.flex.flex-wrap.items-center.justify-center.rounded-lg.bg-white.py-2.px-4.my-4
  - if params[:page].to_i > 1
    = link_to user_hub_for_you_path(page: 1), class: "mx-1 px-2 py-1 text-sm text-primary-500 hover:bg-primary-100 rounded" do
      %i.mdi.mdi-chevron-double-left{title: "First Page"}

  - if params[:page].to_i > 1
    = link_to user_hub_for_you_path(page: params[:page].to_i - 1), class: "mx-1 px-2 py-1 text-sm text-primary-500 hover:bg-primary-100 rounded" do
      %i.mdi.mdi-chevron-left{title: "Previous Page"}

  - start_page = [params[:page].to_i - 2, 1].max
  - end_page = [start_page + 4, @total_pages].min

  - start_page.upto(end_page) do |page|
    - if page == params[:page].to_i
      %span.mx-1.px-2.py-1.text-sm.font-semibold.text-white.bg-primary-500.rounded= page
    - else
      = link_to user_hub_for_you_path(page: page), class: "mx-1 px-2 py-1 text-sm text-primary-500 hover:bg-primary-100 rounded" do
        = page

  - if params[:page].to_i < @total_pages
    = link_to user_hub_for_you_path(page: params[:page].to_i + 1), class: "mx-1 px-2 py-1 text-sm text-primary-500 hover:bg-primary-100 rounded" do
      %i.mdi.mdi-chevron-right{title: "Next Page"}

  - if params[:page].to_i < @total_pages
    = link_to user_hub_for_you_path(page: @total_pages), class: "mx-1 px-2 py-1 text-sm text-primary-500 hover:bg-primary-100 rounded" do
      %i.mdi.mdi-chevron-double-right{title: "Last Page"}
