.flex.flex-col.justify-center.items-center{ class: "h-full w-full" }
  .flex.flex-col.justify-center.items-center{ class: "w-11/12" }
    = controlled_form '/register', id: 'register-form', method: :post do
      .flex.flex-col.justify-center.items-start.shadow-xl.rounded-md.p-4.border-1.bg-white
        .flex.flex-col.justify-center.items-center.text-xl.font-bold.mb-4.w-full
          = "Register an account"
        %label{for: "email"}
          = "Email"
        %input{type: "email", name: "email", id: "email", required: true, class: "rounded-md p-2 w-full"}
        %label{for: "username"}
          = "Username"
        %input{type: "text", name: "username", id: "username", required: true, class: "rounded-md p-2 w-full"}
        %label{for: "password"}
          = "Password"
        %input{type: "password", name: "password", id: "password", required: true, class: "rounded-md p-2 w-full"}
        %label{for: "first_name"}
          = "First Name"
        %input{type: "text", name: "first_name", id: "first_name", required: true, class: "rounded-md p-2 w-full"}
        %label{for: "last_name"}
          = "Last Name"
        %input{type: "text", name: "last_name", id: "last_name", required: true, class: "rounded-md p-2 w-full"}
        %label{for: "country"}
          = "Country"
        %input{type: "text", name: "country", id: "country", required: true, class: "rounded-md p-2 w-full"}
        %label{for: "city"}
          = "City"
        %input{type: "text", name: "city", id: "city", required: true, class: "rounded-md p-2 w-full"}

        .flex.flex-row.justify-between.items-center.mt-4
          %button{type: "submit", class: "bg-primary-500 text-white rounded-md p-2"}
            = "Register"
    .flex.flex-row.justify-center.items-center.mt-4.text-xs
      .mr-1
        = "Do you have an existing account?"
      = link_to "Log in!", "/login", class: "text-primary-500"