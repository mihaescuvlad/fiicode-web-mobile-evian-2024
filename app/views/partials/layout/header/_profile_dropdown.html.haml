- links = [{label: "My Submissions", path: user_submissions_path},
          {label: "My Hub page",
           path: if current_user.present? then user_hub_user_path(current_user) else "#" end}]


- unless current_user.nil?
  .profile-dropdown-menu.absolute.top-full.-right-5.p-4.hidden
    .w-64.py-4.bg-primary-500.flex.flex-col.duration-300.gap-4.rounded-b-lg
      .flex.flex-row.justify-between.items-center.px-4.text-2xl
        = link_to user_profile_path do
          = current_user.first_name
        = link_to '/logout' do
          %i.mdi.mdi-logout-variant
      %ul.flex.flex-col
        - links.each do |link|
          = link_to link[:path] do
            %li.px-4.py-2.hover:bg-primary-400
              = link[:label]
- else
  .profile-dropdown-menu.absolute.top-full.-right-5.p-4.hidden
    %ul.w-32.py-2.bg-primary-500.flex.flex-col.rounded-b-lg
      = link_to '/login' do
        %li.px-4.py-2.hover:bg-primary-400
          Log in
      = link_to '/register' do
        %li.px-4.py-2.hover:bg-primary-600
          Register
