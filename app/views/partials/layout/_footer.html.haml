.flex.flex-col.w-full.justify-between.space-y-4.bg-primary-500.p-8.text-white{ class:"md:flex-row md:space-x-4 space-y-0" }
  .flex.flex-col.items-center.justify-center.space-y-2.w-full
    %span
      = "Copyright Â© #{Time.now.year} Freshly. All rights reserved."
    .flex.flex-row.items-center.space-x-2
      %span
        = "Powered by Ruby on Rails"
      .mdi.mdi-language-ruby-on-rails.text-2xl
    .flex.flex-col.items-center.w-full
      .font-bold.text-s.text-slate-100.mb-3
        = "Contributors"
      %div.flex.flex-col.grid.gap-x-4.items-center.ml-20{class:"grid-cols-2"}
        %span.text-xs.text-slate-100.flex
          = "Mihai Soare"
        %a(href="https://www.linkedin.com/in/m-a-soare/" target="_blank" rel="noopener noreferrer")
          %span.mdi.mdi-linkedin.text-base{ class: "w-1/4 hover:text-indigo-300" }
        %span.text-xs.text-slate-100.flex
          = "Robert Popa"
        %a(href="https://www.linkedin.com/in/ra-popa/" target="_blank" rel="noopener noreferrer")
          %span.mdi.mdi-linkedin.text-base{ class: "w-1/4 hover:text-indigo-300" }
        %span.text-xs.text-slate-100.flex
          = "Vlad Mihaescu"
        %a(href="https://www.linkedin.com/in/vlad-mihaescu/" target="_blank" rel="noopener noreferrer")
          %span.mdi.mdi-linkedin.text-base{ class: "w-1/4 hover:text-indigo-300" }
  .flex.flex-col.items-center.w-full.space-y-4
    .font-bold
      = "Credits"
    = link_to "https://world.openfoodfacts.org/", target: "_blank" do
      = image_tag "https://static.openfoodfacts.org/images/logos/off-logo-horizontal-light.svg", class: "w-40 h-8"
    = link_to "https://rapidapi.com/", target: "_blank" do
      = image_tag "https://rapidapi.com/static-assets/default/dark-logo-78e48dc1-ca3f-4d67-a6f5-74032f439c8b.svg", class: "w-40 h-6"
    = link_to "https://www.tailwindcss.com/", target: "_blank" do
      = image_tag "https://tailwindcss.com/_next/static/media/tailwindcss-logotype-white.944c5d0ef628083bb316f9b3d643385c86bcdb3d.svg", class: "w-40 h-8"
  .flex.flex-col.items-center.w-full.space-y-4
    .font-bold.w-full.text-center
      = "Contact Us"
    = controlled_form '/contact', method: :post, class: "flex flex-col gap-2 w-full max-w-2xl", id: "contact-form" do
      .flex.flex-col.items-center.space-y-2.w-full
        .flex.flex-row.items-center.space-x-2.w-full
          %div.relative.flex.items-center.w-full
            %i.mdi.mdi-email-outline.absolute.ml-2.text-gray-400.text-xl
            %input{type: "email", name: "email", id: "email", required: true, class: "pl-10 pr-3 py-2 border rounded-md w-full text-black", placeholder: "Email", required: true}
          %div.relative.flex.items-center.w-full
            %i.mdi.mdi-account-outline.absolute.ml-2.text-gray-400.text-xl
            %input{type: "text", name: "name", id: "name", required: true, class: "pl-10 pr-3 py-2 border rounded-md w-full text-black", placeholder: "Name", required: true}
        %textarea{ name: "message", id: "message", class: "rounded-lg p-2 w-full text-black", placeholder: "Message", required: true }
        %button{ class: "!bg-primary-400 text-white rounded-lg p-2 w-full", type: "submit", id: "contact-submit" }
          = "Send"

:javascript
  $(document).ready(function() {
    $('#contact-form').submit(function(e) {
      $('#email').val('');
      $('#name').val('');
      $('#message').val('');
    });
  });