%html
  %head
    %title Admin CeMancam
    %meta{name: "viewport", content: "width=device-width,initial-scale=1"}
  = csrf_meta_tags
  = csp_meta_tag
  = stylesheet_link_tag "application", "data-turbo-track" => "reload"
  = stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track" => "reload"
  = javascript_include_tag "application", "data-turbo-track" => "reload"
  = stylesheet_link_tag "notifier/hidden"
  = javascript_include_tag "notifier/base_notifier"
  = javascript_include_tag "form/form_controller"
  %script{src: "https://code.jquery.com/jquery-3.6.0.min.js"}
  %script{src: "https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"}
  %link{rel: "stylesheet", href: "https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css"}

  = yield :head

  %link{href: "https://cdn.materialdesignicons.com/7.4.47/css/materialdesignicons.min.css", rel: "stylesheet"}

  = javascript_importmap_tags

  %body.w-full.h-full.bg-slate-200.flex.flex-col
    = render "partials/notifier/success_notifier"
    = render "partials/notifier/error_notifier"
    
    %header.bg-primary-500.p-4.text-white.sm:block
      %nav.container.mx-auto.h-8.px-2.flex.justify-center.items-center.gap-10
        %ul.hidden.sm:flex.items-center.gap-4
          = link_to admin_submissions_path, class: "flex items-center gap-1" do
            %i.mdi.text-2xl{ class: "mdi-clipboard-list-outline" }

            %span.hidden.text-sm.capitalize.lg:inline-block
              Submissions
    %main.flex-1.p-4.overflow-scroll
      = yield
    